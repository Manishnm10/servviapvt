# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC=medical-articles
KAFKA_GROUP_ID=medical-ingest-group

# MongoDB (point this to your existing FarmStack / servviapvt Mongo)
# Example local: mongodb://localhost:27017
# Example Atlas: mongodb+srv://user:pass@cluster0.mongodb.net/?retryWrites=true&w=majority
MONGO_URI=mongodb://localhost:27017
MONGO_DB=servviapvt
MONGO_COLLECTION=medical_articles

# Embedding model used by sentence-transformers
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Scraper options
SCRAPER_USER_AGENT=servvia-scraper/1.0 (+https://example.com)
SCRAPER_MIN_TEXT_LENGTH=300